{
    "variables": {
        "iso_folder": "2017.10.17",
        "iso_version": "2017.10.18-00.07-alpha"
    },
    "builders": [
        {
            "name": "parabola-bootstrapped",
            "type": "virtualbox-iso",
            "guest_os_type": "ArchLinux_64",
            "iso_url": "https://repo.parabola.nu/iso-beta/systemd-cli-{{ user `iso_folder` }}/parabola-systemd-cli-x86_64-netinstall-{{ user `iso_version` }}.iso",
            "iso_checksum_url": "https://repo.parabola.nu/iso-beta/systemd-cli-{{ user `iso_folder` }}/SHA512SUMS",
            "iso_checksum_type": "sha512",

            "headless": "true",

            "http_directory": "../bootstrap",

            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "45m",

            "boot_wait": "15s",

            "shutdown_command": "sudo systemctl poweroff",
            "post_shutdown_delay": "2m",

            "hard_drive_interface": "sata",
            "format": "ovf",
            "disk_size": "122880",
            "guest_additions_mode": "disable",

            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "4096"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"],
                ["modifyvm", "{{.Name}}", "--pae", "on"],
                ["modifyvm", "{{.Name}}", "--acpi", "on"],
                ["modifyvm", "{{.Name}}", "--ioapic", "on"],
                ["modifyvm", "{{.Name}}", "--vram", "128"],
                ["modifyvm", "{{.Name}}", "--accelerate3d", "on"],
                ["modifyvm", "{{.Name}}", "--clipboard", "bidirectional"],
                ["modifyvm", "{{.Name}}", "--draganddrop", "bidirectional"],
                ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
                ["modifyvm", "{{.Name}}", "--mouse", "usb"],
                ["modifyvm", "{{.Name}}", "--keyboard", "usb"],
                ["modifyvm", "{{.Name}}", "--audiocontroller", "hda"],
                ["modifyvm", "{{.Name}}", "--usbehci", "on"]
            ],

            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/arch-install<enter><wait10>",
                "export ai_automatic_install=1<enter>",
                "export ai_is_vagrant=1<enter>",
                "/usr/bin/bash ./arch-install<enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "pause_before": "30s",
            "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
            "scripts": [
                "scripts/cleanup.sh",
                "scripts/minimize.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "output": "boxes/bfee-parabola-bootstrapped.box",
            "type": "vagrant"
        }
    ]
}
