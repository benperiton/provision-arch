{
    "variables": {
        "iso_version": "2018.03.01"
    },
    "builders": [
        {
            "name": "arch-bootstrapped",
            "type": "virtualbox-iso",
            "guest_os_type": "ArchLinux_64",
            "iso_url": "https://mirrors.kernel.org/archlinux/iso/{{ user `iso_version` }}/archlinux-{{ user `iso_version` }}-x86_64.iso",
            "iso_checksum_url": "https://mirrors.kernel.org/archlinux/iso/{{ user `iso_version` }}/sha1sums.txt",
            "iso_checksum_type": "sha1",

            "headless": "true",

            "http_directory": "../bootstrap",

            "ssh_username": "vagrant",
            "ssh_password": "vagrant",

            "ssh_wait_timeout": "45m",
            "boot_wait": "15s",

            "shutdown_command": "sudo systemctl poweroff",
            "post_shutdown_delay": "2m",

            "hard_drive_interface": "sata",
            "format": "ovf",
            "disk_size": "122880",
            "guest_additions_mode": "disable",

            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "4096"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"],
                ["modifyvm", "{{.Name}}", "--vram", "128"],
                ["modifyvm", "{{.Name}}", "--accelerate3d", "on"],
                ["modifyvm", "{{.Name}}", "--clipboard", "bidirectional"],
                ["modifyvm", "{{.Name}}", "--draganddrop", "bidirectional"],
                ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
                ["modifyvm", "{{.Name}}", "--mouse", "usb"],
                ["modifyvm", "{{.Name}}", "--keyboard", "usb"],
                ["modifyvm", "{{.Name}}", "--audiocontroller", "hda"],
                ["modifyvm", "{{.Name}}", "--usbehci", "on"]
            ],

            "boot_command": [
                "<enter><wait10><wait10><wait10>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/arch-install<enter><wait10>",
                "export ai_host_name=\"packer-$((1 + RANDOM % 1000))\"<enter>",
                "export ai_main_disk='/dev/sda'<enter>",
                "export ai_second_disk=''<enter>",
                "export ai_kernel_version='lts'<enter>",
                "export ai_root_pwd_hash='$6$X7CNILR8u4OcP$B1PGIar28anDJKiuoBdrgCSkR98KE7uaVd3/wBBVQZuczsnP6ha6v1Nntc6imhwG2mATNvRT1X/aykb3ZETqa.'<enter>",
                "export ai_ansible_pwd_hash='$6$fn95dtCnNmwsG$7IzYjdq7tuhW6kFda0/3vN9nAci/./zMgdGHjE6RWSBI1ceJY00PWFrLy2AMUEO0C6crxBjNHD/BBff5jacNQ1'<enter>",
                "export ai_is_vagrant=1<enter>",
                "/usr/bin/bash ./arch-install<enter>",
                "<wait5><enter><wait><enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
            "scripts": [
                "scripts/stamp.sh",
                "scripts/vagrant.sh",
                "scripts/install-virtualbox.sh"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo systemctl reboot"
            ]
        },
        {
            "type": "shell",
            "pause_before": "30s",
            "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
            "scripts": [
                "scripts/cleanup.sh",
                "scripts/minimize.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "output": "boxes/bfee-arch-bootstrapped.box",
            "type": "vagrant"
        }
    ]
}
